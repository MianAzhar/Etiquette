<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pk.EA.Scenario.app.Etiquette.fragments.SuggestedAnswerFragment"
    android:weightSum="10"
    android:orientation="vertical">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:background="@drawable/headerbar"
        android:id="@+id/relativeLayout">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:src="@drawable/leftmenu"
            android:id="@+id/drawMenu"
            android:padding="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:text="@string/travel_text" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/worldlocation" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="9.2"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="250dp"
            android:scaleType="fitXY"
            android:padding="0dip"
            android:src="@drawable/image_preview"
            android:id="@+id/suggestedAnswer_image"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/imageforegroundoverlay"
                android:orientation="vertical"
                android:layout_marginBottom="15dp"
                android:layout_gravity="bottom">

                <TextView
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:text="It is often crowded in economy class in plane rides. We understand everyone wants to get as much leg room as possible."
                    android:textColor="#ffffff"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"
                    android:id="@+id/question_text"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/travel_text"
                    android:textColor="#ffffff"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="10dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/starfill"
                        android:id="@+id/star1"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/starfill"
                        android:id="@+id/star2"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/star3"
                        android:src="@drawable/starfill"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/star"
                        android:id="@+id/star4"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/star"
                        android:id="@+id/star5"/>
                </LinearLayout>

            </LinearLayout>


        </FrameLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/imagebg">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#ffffff"
                android:text="Lorem ipsum dolor sit amet, qui omnium scripta praesent eu, per delenit periculis eu. Ad pro alienum apeirian splendide, eu putant torquatos philosophia quo. Ne eos commodo mentitum. Minimum petentium no usu, delectus invenire repudiare ea cum. Modus ipsum scribentur ei has, sensibus urbanitas ex pro. Mea te eros affert audire, nec at simul maiestatis incorrupte. Est at ponderum accusata scribentur. Suas eruditi forensibus sit ut, sumo imperdiet referrentur ex per, eam mundi verterem id. Utamur principes dissentiunt cu eam, audire praesent torquatos qui ea. Ad qui patrioque deseruisse. Propriae quaestio quaerendum usu no, errem postea eu pro. Nec no eius reque erant, et impedit maluisset dignissim quo. Est docendi fastidii te. Ius no nobis molestie facilisi, mollis iudicabit ea nam. Purto detraxit at mel. Vel ei everti definitiones, no mea dicunt efficiantur. Eum an probo solet conceptam. Eos tota omnis rebum ei, qui dicunt audiam in. Vis te quas facer ignota. Quo no aeque quaeque ancillae, habeo dicunt at vix. Has impedit volumus eu, mei ut viderer quaeque, melius vivendum ex pro. Ex quo atqui iisque, te sed duis soleat oporteat. Ut tota neglegentur mei, quaestio gloriatur ex per. Debitis admodum facilisis eu has, postea iracundia evertitur at pri, ullamcorper voluptatibus ei vim. Sit id eligendi expetenda, consul habemus efficiendi te vis. Ut elaboraret reprehendunt qui, at vix eruditi consulatu."
                android:layout_margin="10dp"
                android:scrollbars="vertical"
                android:id="@+id/answer_text"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
